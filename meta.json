{
  "prompts": {
    "name": {
      "type": "string",
      "message": "项目名称"
    },
    "appId": {
      "type": "string",
      "message": "appId"
    },
    "description": {
      "type": "string",
      "message": "项目介绍",
      "default": "A BabyTree project"
    },
    "author": {
      "type": "string",
      "message": "作者"
    },
    "lint": {
      "type": "confirm",
      "message": "使用ESLint?",
      "default": false
    },
    "stat": {
      "type": "confirm",
      "message": "添加公司埋点?",
      "default": true
    },
    "ald": {
      "type": "confirm",
      "message": "添加阿拉丁统计?",
      "default": true
    },
    "autoInstall": {
      "type": "list",
      "message": "自动安装依赖?",
      "choices": [{
        "name": "自动运行npm install",
        "value": "npm",
        "short": "npm"
      }, {
        "name": "我自己运行npm install",
        "value": false,
        "short": false
      }],
      "default": "npm"
    }
  },
  "filters": {
    ".eslintignore": "lint",
    ".eslintrc.js": "lint",
    "src/utils/ald-stat.js": "ald",
    "src/utils/ald-stat-conf.js": "ald"
  }
}
